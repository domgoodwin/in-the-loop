extends layout

block content
  section(class='input-page header')
    div(class='container')
      h2(class='title')= title
      p Enter an article you'd like summarised
      div(class='container')
        form(method='POST' action='summary')
          p(class="label") Article contents:  
            textarea(class="contents", name="contents")
          p(class="label") URL (leave blank if using contents):  
            input(class="question", name="url")
          button(class='button button-primary', type="submit") Summarise
